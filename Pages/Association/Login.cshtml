@page
@model KheyrkoumProjet.Pages.Association.Login
@{
    ViewData["Title"] = "Login";
}



<!DOCTYPE html>

<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body style="  background: linear-gradient(to bottom right, #b8434310 , #f8f5f5 );">

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card text-center" style="border-radius: 1rem;">
                    <div class="card-body p-4 p-lg-5 text-black">
                        <form method="post" >
                         
                            <div class="d-flex justify-content-center mb-4">
                                <i class="fas fa-cubes fa-2x me-3" style="color: #b84343;"></i>
                                <a class="navbar-brand" href="/">
                                <span class="h3 fw-bold mb-0"><img src="~/img/logol.png" alt="login form" class="logo" style="border-radius: 1rem 0 0 1rem;" /></span>
                            </a>
                            </div>
                            <h5 class="fw-normal mb-4 pb-3" style="letter-spacing: 1px;">تسجيل الدخول إلى حسابك</h5>

                            

                        
                            <div class="form-outline mb-4">
                                <input placeholder="البريد الإلكتروني" type="email" id="email" name="email" asp-for="Email"  class="form-control" style="font-size: 14px; padding: 10px;" required />
                            </div>
                            <div class="form-outline mb-4">
                                <input placeholder="كلمة المرور"  type="password" id="password" name="password" asp-for="Password"  class="form-control" style="font-size: 14px; padding: 10px;" required />
                            </div>
                            <div class="pt-1 mb-4">
                                <button class="btn btn-dark btn-lg btn-block" type="submit" style="font-size: 16px;">تسجيل الدخول</button>
                            </div>
                            
                            <a class="small text-muted" href="#!" style="font-size: 12px;">هل نسيت كلمة المرور؟</a>
                            <p class="mb-4 pb-lg-2" style="color: #393f81; font-size: 12px;">ليس لديك حساب؟ <a href="#!" style="color: #393f81; font-size: 12px;">سجل هنا</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</body>
</html>
