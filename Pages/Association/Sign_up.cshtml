@page
@model KheyrkoumProjet.Pages.Association.Sign_upModel
@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الحساب</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(to bottom right, #b8434310 , #f8f5f5 );
        }
        .custom-file-label::after {
            content: none;
        }
    </style>
</head>
<body>

<section class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card text-center" style="border-radius: 1rem;">
                    <div class="card-body p-4 p-lg-5 text-black">
                        <div class="d-flex justify-content-center mb-4">
                            <i class="fas fa-cubes fa-2x me-3" style="color:#b84343;"></i>
                            <a class="navbar-brand" href="/">
                                <span class="h3 fw-bold mb-0"><img src="~/img/logol.png" alt="login form" class="logo" style="border-radius: 1rem 0 0 1rem;" /></span>
                            </a>
                        </div>
                        <h5>سجل حسابك</h5>
                       
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.ErrorMessage
                            </div>
                        }
                        
                        <form method="post" enctype="multipart/form-data" style="text-align: right;">
                            <div class="form-row">

                                

                                <div class="form-group col-md-6">
                                    <label for="Email">الإيميل</label>
                                    <input type="email" id="Email" name="Email" class="form-control" />
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="Nom">اسم الجمعية</label>
                                    <input type="text" id="Nom" name="Nom" class="form-control" />
                                </div>
                                
                                <div class="form-group col-md-6">
                                    <label for="Password">كلمة المرور</label>
                                    <input type="password" id="Password" name="Password" class="form-control" />
                                </div>
                                
                                <div class="form-group col-md-6">
                                    <label for="Information">تعريف بالجمعية</label>
                                    <textarea id="Information" name="Information" class="form-control"></textarea>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Adresse">العنوان</label>
                                    <input type="text" id="Adresse" name="Adresse" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="Tel">رقم الهاتف</label>
                                    <input type="text" id="Tel" name="Tel" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="NumeroLicence">رقم الترخيص</label>
                                    <input type="text" id="NumeroLicence" name="NumeroLicence" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="ProfileImage">صورة الملف</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="ProfileImage" name="ProfileImage">
                                        <label class="custom-file-label" for="ProfileImage">اختر صورة</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="AnotherImage">صورة خلفية الملف</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="AnotherImage" name="AnotherImage">
                                        <label class="custom-file-label" for="AnotherImage">اختر صورة</label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-dark btn-lg btn-block" type="submit">تسجيل</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</body>
</html>
